<div id="login-container">
  <div id="h-container">
    <h2>Login</h2>
  </div>
​
  <div id="forms-container" style="height: 550px;">
    <form action="/auth/login" method="POST" style="width: 60%" id="form-container">
      <div class="form-group">
        <label for="email">Email</label>
        <input id="email" class="form-control" type="text" name="email" placeholder="palomino@gmail.com">
      </div>
​
      <div class="form-group">
        <label for="password">Contraseña</label>
        <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
      </div>
​
      {{#if message }}
      <div class="error-message" style="color: red">{{ message }}</div>
      {{/if}}
​
      <button class="btn btn-info">Login</button>
​
      <small class="form-text text-muted">
        No tienes una cuenta aun?
        <a id="forms-links" href="/auth/signup">Registrate</a>
      </small>
    </form>
  </div>

