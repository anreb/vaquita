<div id="promos-container">
  <h2>Promociones</h2>
  <div id="promo-listing">
      <section class="promociones">
        {{#each promos as |promo|}}
        <div class="card" style="width: 60%">
          <img src={{promo.imgUrl}}>
          <div class="card-body">
            <p class="card-text">{{promo.name}} <br> {{promo.store.name}}<br>{{promo.price}}<br>{{promo.description}}<br>{{promo.expiration}}<br>{{promo.author.name}}</p><br>
   ​
            <form action="/promos/{{promo._id}}/delete" method="POST">
              <button type="submit">Eliminar</button>
            </form><br>
            <form action="/promos/{{promo._id}}/edit" method="GET">
              <button type="submit">Editar</button>
            </form><br>
          </div>
        </div>
        {{/each}}
      </section>
    </div> 
</div>
