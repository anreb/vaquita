<div id="h-container">
  <h2>Login</h2>
</div>

<div id="forms-container">
  <form action="/auth/login" method="POST" style="width: 50%" id="form-container">
    <div class="form-group">
      <label for="email">Email</label>
      <input id="email" class="form-control" type="text" name="email" placeholder="palomino@gmail.com">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
    </div>

    {{#if message }}
    <div class="error-message" style="color: red">{{ message }}</div>
    {{/if}}

    <button class="btn btn-info">Login</button>

    <small class="form-text text-muted">
      Don't have an account yet?
      <a id="forms-links" href="/auth/signup">Signup</a>
    </small>
  </form>
</div>