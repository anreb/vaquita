<form action="/promos/new" method="POST" enctype="multipart/form-data" id="form-container">
  <label for="name">Name</label>
  <input id="name" type="text" name="name">

  <br><br>

  <label for="description">Description</label>
  <input id="description" type="text" name="description">

  <br><br>

  <label for="expiration">Expiration</label>
  <input id="expiration" type="text" name="expiration">

   <br><br>

   <label for="price">Price</label>
  <input id="price" type="number" name="price">

   <br><br>

   <label for="photo">Profile Picture</label>
   <input type="file" name="photo" id="photo" accept="image/*">
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create promo</button>
</form>

{{#each promos as |promo|}}
    <div>
        <img src={{promo.imgUrl}}>
        <h2>{{promo.name}}</h2>
        <h3>{{promo.description}}</h3>
        <h3>{{promo.expiration}}</h3>
        <h3>{{promo.price}}</h3>
        <h3>{{promo.author.name}}</h3>
        <form action="/promos/{{promo._id}}/delete" method="POST">
            <button type="submit">Delete</button>
        </form>
    </div>
{{/each}}
